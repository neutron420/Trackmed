# Server Configuration
WS_PORT=3003
HTTP_PORT=3004
NODE_ENV=development

# JWT Secrets (must match backend secrets)
JWT_SECRET_USER=your-user-be-jwt-secret-change-in-production
JWT_SECRET_ADMIN=your-admin-be-jwt-secret-change-in-production

# Service Keys (for backend-to-backend auth)
ADMIN_BE_SERVICE_KEY=admin-service-key-change-in-production
USER_BE_SERVICE_KEY=user-service-key-change-in-production

# Backend URLs (for health checks/callbacks)
ADMIN_BE_URL=http://localhost:3000
USER_BE_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_MESSAGES=100

# Connection Limits
MAX_CONNECTIONS_PER_USER=5
MAX_TOTAL_CONNECTIONS=1000

# Heartbeat
HEARTBEAT_INTERVAL_MS=30000
HEARTBEAT_TIMEOUT_MS=60000
